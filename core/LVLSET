c
c     Level-Set Arrays
c
	real eps_ls
	real eps_redist
	logical ifredist(10)
	integer ifld_tls
	
	common /tlsvar/ eps_ls,eps_redist,ifredist,ifld_tls
	
	real signls(lx1,ly1,lz1,lelv)
	real lsH(lx1,ly1,lz1,lelv)
	real tlsvx(lx1,ly1,lz1,lelv)
	real tlsvy(lx1,ly1,lz1,lelv)
	real tlsvz(lx1,ly1,lz1,lelv)
	real tlsadv(lx1,ly1,lz1,lelv)
	
	common /tlsarrays/ signls,lsH,tlsvx,tlsvy,tlsvz,tlsadv

c
c	Conservative level-set arrays
c
	real eps_cls
	logical ifclsredist(10)
	integer ifld_cls
	
	common /clsvar/ eps_cls,ifclsredist,ifld_cls

	real clsnx(lx1,ly1,lz1,lelv)
	real clsny(lx1,ly1,lz1,lelv)
	real clsnz(lx1,ly1,lz1,lelv)
	real clsnr(lx1,ly1,lz1,lelv)
	real clsns(lx1,ly1,lz1,lelv)
	real clsnt(lx1,ly1,lz1,lelv)

	real clsadv(lx1,ly1,lz1,lelv)
	real clsau(lx1,ly1,lz1,lelv)

	common /clsarr1/ clsnx,clsny,clsnz
	common /clsarr2/ clsnr,clsns,clsnt
	common /clsarr3/ clsadv,clsau

c
c	Driver variables
c
	real dt_tls,dt_cls
	real cfl_tls,cfl_cls

	integer nsteps_tls,nsteps_cls
	
	common /lsdrive1/ dt_tls,dt_cls
	common /lsdrive2/ cfl_tls,cfl_cls
	common /lsdrive3/ nsteps_tls,nsteps_cls
	
